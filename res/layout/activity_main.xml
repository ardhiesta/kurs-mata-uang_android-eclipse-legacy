<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unmer.kursmatauang.MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Konversi kurs mata uang, dari :"
        android:textSize="16sp" />

    <!-- spinner untuk memilih nilai mata uang asal yang akan dikonversi -->
    <Spinner
        android:id="@+id/spinner_mata_uang1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/array_mata_uang" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ke :"
        android:textSize="16sp" />

    <!-- spinner untuk memilih nilai mata uang tujuan konversi kurs -->
    <Spinner
        android:id="@+id/spinner_mata_uang2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/array_mata_uang" />

    <!-- button untuk melakukan konversi nilai kurs -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="lihatKurs"
        android:text="Lihat Kurs" />

    <!-- textview untuk menampilkan hasil konversi kurs -->
    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>